<column alignment="center" valignment="top" width="0">
<column alignment="left" valignment="top" width="80line%">
<row>
<cell multirow="3" alignment="left" valignment="middle" usebox="none">
\begin_inset Text

\begin_layout Plain Layout
\begin_inset Tabular
